{% extends 'base.html.twig' %}

{% block title %}Group index
{% endblock %}

{% block body %}
	<div class="flex items-center gap-3 mb-3">
		<h4 class="mb-2 text-2xl font-medium">Vos groupes</h4>
		{{ component('Link:Primary', {
			path: 'app_group_new',
			content: "Nouveau groupe"
		})}}
	</div>

    <div class="flex flex-wrap gap-2">
    {% for group in groups %}
		<a href="{{ path('app_group_show', { 'id': group.id })}}" class="md:w-1/3 flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
			<img class="object-fill w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src="{{ group.picture.source }}" alt="Photo de {{ group.name }}">
			<div class="flex flex-col justify-between p-4 leading-normal">
				<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ group.name }}</h5>
				<p class="mb-3 font-normal text-gray-500 dark:text-gray-400 text-sm">Groupe créé le
					{{ group.createdAt|date('d M Y')}}.</p>
			</div>
		</a>
	{% endfor %}
    </div>
{% endblock %}
